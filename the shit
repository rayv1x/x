-- // Custom Emoji Notification System (Rounded, Smooth) // --

local TweenService = game:GetService("TweenService")
local HttpService = game:GetService("HttpService")

local activeNotifications = 0

local function createNotification(title, text, duration)
    duration = duration or 3
    activeNotifications += 1
    local index = activeNotifications

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "RayNotification_" .. HttpService:GenerateGUID(false)
    screenGui.IgnoreGuiInset = true
    screenGui.ResetOnSpawn = false
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    screenGui.Parent = game:GetService("CoreGui")

    local holder = Instance.new("Frame")
    holder.Size = UDim2.new(0, 320, 0, 100)
    holder.Position = UDim2.new(1, -340, 0, 20 + ((index - 1) * 110))
    holder.BackgroundTransparency = 1
    holder.Parent = screenGui

    local frame = Instance.new("Frame", holder)
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.Position = UDim2.new(0, 40, 0, 0)
    frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    frame.BackgroundTransparency = 1
    frame.BorderSizePixel = 0

    Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 10)

    local titleLabel = Instance.new("TextLabel", frame)
    titleLabel.Size = UDim2.new(1, -20, 0, 28)
    titleLabel.Position = UDim2.new(0, 10, 0, 6)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = title
    titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleLabel.TextSize = 20
    titleLabel.Font = Enum.Font.GothamMedium
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.TextTransparency = 1

    local bodyText = Instance.new("TextLabel", frame)
    bodyText.Size = UDim2.new(1, -20, 1, -42)
    bodyText.Position = UDim2.new(0, 10, 0, 36)
    bodyText.BackgroundTransparency = 1
    bodyText.Text = text
    bodyText.TextColor3 = Color3.fromRGB(200, 200, 200)
    bodyText.TextSize = 17
    bodyText.Font = Enum.Font.Gotham
    bodyText.TextWrapped = true
    bodyText.TextXAlignment = Enum.TextXAlignment.Left
    bodyText.TextYAlignment = Enum.TextYAlignment.Top
    bodyText.TextTransparency = 1

    -- Animate in
    TweenService:Create(frame, TweenInfo.new(0.5), {
        BackgroundTransparency = 0.15,
        Position = UDim2.new(0, 0, 0, 0)
    }):Play()
    TweenService:Create(titleLabel, TweenInfo.new(0.5), {TextTransparency = 0}):Play()
    TweenService:Create(bodyText, TweenInfo.new(0.5), {TextTransparency = 0}):Play()

    -- Auto remove
    task.delay(duration, function()
        TweenService:Create(frame, TweenInfo.new(0.4), {
            BackgroundTransparency = 1,
            Position = UDim2.new(0, 40, 0, 0)
        }):Play()
        TweenService:Create(titleLabel, TweenInfo.new(0.4), {TextTransparency = 1}):Play()
        TweenService:Create(bodyText, TweenInfo.new(0.4), {TextTransparency = 1}):Play()
        task.wait(0.4)
        screenGui:Destroy()

        -- Re-align lower ones
        for _, gui in ipairs(game:GetService("CoreGui"):GetChildren()) do
            if gui.Name:find("RayNotification_") then
                local frm = gui:FindFirstChildOfClass("Frame")
                if frm and frm.Position.Y.Offset > holder.Position.Y.Offset then
                    TweenService:Create(frm, TweenInfo.new(0.3), {
                        Position = frm.Position - UDim2.new(0, 0, 0, 110)
                    }):Play()
                end
            end
        end

        activeNotifications -= 1
    end)
end

-- // HWID Authorization Check with Emojis // --

local allowedHWIDs = {
    ["be2eb32f-9d38-4f16-b58b-602eb5cee9c0"] = true,
}

local clientHWID = game:GetService("RbxAnalyticsService"):GetClientId()

-- Show "checking" notification
createNotification("üîç HWID Check", "Checking for authorization...", 2)
task.wait(2)

if allowedHWIDs[clientHWID] then
    createNotification("‚úÖ Authorized", "Access granted. Welcome back!", 2.5)
    task.wait(1)
    loadstring(game:HttpGet("https://raw.githubusercontent.com/rayv1x/x/main/test"))()
else
    createNotification("‚ùå Unauthorized", "HWID not recognized. Access denied.", 2.5)
    task.wait(2.5)
    game.Players.LocalPlayer:Kick("üîí Unauthorized HWID")
end